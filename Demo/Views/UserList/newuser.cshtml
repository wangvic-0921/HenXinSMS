  <script type="text/javascript">
      $(function () {
          $("#btn_Add").click(function () {
              var username = $("#UserName").val();
              var password = $("#PassWord").val();
              var depart = $("#Depart").val();
              var value = $("#Level").val();
              if (username == "") {
                  alert("用户名不能为空！");
                  $("#UserName").focus();
                  return;
              }
              if (password == "") {
                  alert("密码不能为空！");
                  $("#PassWord").focus();
                  return;
              }
              if (depart == "") {
                  alert("部门名称不能为空！");
                  $("#Depart").focus();
                  return;
              }
              $.ajax({
                  url: "/UserList/adduser",
                  data: {
                      "UserName": $("#UserName").val(),
                      "PassWord": $("#PassWord").val(),
                      "Depart": $("#Depart").val(),
                      "Level": $("#Level").val(),
                        },
                  type: "post",
                  dataType: "text",
                  success: function (msg) {
                      if (msg == "Success") {
                          alert("添加成功！");
                          window.location.href = "/UserList/userlist";
                      } else if (msg == "Error")
                      {
                          alert("添加失败！");
                      }
                      else
                      {
                          alert("添加失败，因为该用户已存在！");
                      }
                  }

              });
          });
      });
